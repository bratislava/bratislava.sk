{
  "title": "Example",
  "description": "Example schema",
  "type": "object",
  "allOf": [
    {
      "properties": {
        "inputFields": {
          "title": "Showcase of InputField",
          "required": [
            "firstName",
            "lastName"
          ],
          "properties": {
            "nestedFields": {
              "title": "Nested in inputFields",
              "required": ["yourAddress"],
              "properties": {
                "yourAddress": {
                  "type": "string",
                  "title": "Your address"
                }
              }
            },
            "firstName": {
              "type": "string",
              "title": "First Name",
              "default": "Anton"
            },
            "lastName": {
              "type": "string",
              "title": "Last Name"
            },
            "phone": {
              "type": "string",
              "title": "Phone number"
            },
            "password": {
              "type": "string",
              "title": "Password"
            },
            "psc": {
              "type": "string",
              "title": "PSC",
              "format": "zip"
            }
          }
        },
        "textAreas": {
          "title": "Textove polia",
          "required": [
            "pros"
          ],
          "properties": {
            "pros": {
              "title": "Pros",
              "type": "string"
            },
            "cons": {
              "title": "Cons",
              "type": "string",
              "default": "Defaultna hodnota"
            }
          }
        }
      }
    },
    {
      "properties": {
        "selectFields": {
          "title": "Ukazka Selectov",
          "required": [
            "school"
          ],
          "properties": {
            "school": {
              "type": "string",
              "title": "University",
              "oneOf": [
                {"const": "STU FEI", "title": "fakulta elektrotechniky a informatiky"},
                {"const": "STU FCHPT"},
                {"const": "STU FIIT", "title": "fakulta informatiky a informacnych technologii"}
              ]
            },
            "diplomas": {
              "type": "array",
              "title": "Reached diplomas",
              "uniqueItems": true,
              "items": {
                "type": "string",
                "oneOf": [
                  {"const": "STU FEI", "title": "fakulta elektrotechniky a informatiky"},
                  {"const": "STU FCHPT"},
                  {"const": "STU FIIT", "title": "fakulta informatiky a informacnych technologii"}
                ]
              }
            },
            "years": {
              "type": "number",
              "title": "Years in school",
              "uniqueItems": true,
              "enum": [
                1,
                2,
                3,
                4,
                5,
                6
              ]
            }
          }
        }
      }
    },
    {
      "properties": {
        "fileUploads": {
          "title": "Nahratie suborov",
          "required": ["importButtonMultipleFiles"],
          "properties": {
            "importButtonOneFile": {
              "title": "Importuj jeden subor",
              "type": "string"
            },
            "importButtonMultipleFiles": {
              "title": "Importuj viac suborov",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "importDragAndDropOneFile": {
              "title": "Presun sem jeden subor",
              "type": "string"
            },
            "importDragAndDropMultipleFiles": {
              "title": "Presun sem viac suborov",
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    {
      "properties": {
        "chooseOneOf": {
          "title": "Choose one of radio buttons",
          "allOf": [
            {
              "required": ["chooseOne"],
              "properties": {
                "chooseOne": {
                  "type": "string",
                  "default": "multiply",
                  "title": "Some random choose",
                  "oneOf": [
                    {
                      "const": "screen",
                      "title": "Screen",
                      "disabled": true,
                      "tooltip": "This is some tooltip1"
                    },
                    {
                      "const": "multiply",
                      "title": "Multiply",
                      "error": true
                    },
                    {
                      "const": "overlay",
                      "title": "Overlay"
                    },
                    {
                      "const": "notOverlay",
                      "title": "Not Overlay"
                    }
                  ]
                }
              }
            },
            {
              "if": {
                "properties": {
                  "chooseOne": {
                    "const": "overlay"
                  }
                }
              },
              "then": {
                "properties": {
                  "overlayInput": {
                    "type": "string",
                    "title": "Write something for overlay input"
                  }
                },
                "required": ["overlayInput"]
              },
              "else": {
                "properties": {
                  "notOverlayInput": {
                    "type": "string",
                    "title": "Write something for other inputs than overlay"
                  }
                }
              }
            }
          ]
        }
      }
    },
    {
      "properties": {
        "checkBoxes": {
          "title": "Checkboxes",
          "properties": {
            "favouriteFruits": {
              "type": "array",
              "title": "Fruits",
              "default": ["kiwi","apple"],
              "uniqueItems": true,
              "items": {
                "anyOf": [
                  {
                    "label": "Orange",
                    "const": "orange",
                    "disabled": true
                  },
                  {
                    "label": "Banana",
                    "const": "banana",
                    "error": true,
                    "tooltip": "This is some tooltip"
                  },
                  {
                    "label": "Grape",
                    "const": "grape",
                    "isDisabled": true
                  },
                  {
                    "label": "Kiwi",
                    "const": "kiwi",
                    "isIndeterminate": true
                  },
                  {
                    "label": "Apple",
                    "const": "apple"
                  },
                  {
                    "label": "Plum",
                    "const": "plum"
                  }
                ]
              }
            }
          }
        }
      }
    }
  ]
}

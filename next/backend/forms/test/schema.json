            "firstName",
            "lastName"
          ],
          "properties": {
            "firstName": {
              "type": "string",
              "title": "First Name",
              "default": "Anton"
            },
            "lastName": {
              "type": "string",
              "title": "Last Name"
            },
            "phone": {
              "type": "string",
              "title": "Phone number"
            },
            "password": {
              "type": "string",
              "title": "Password"
            },
            "psc": {
              "type": "string",
              "title": "PSC",
              "format": "zip"
            },
            "textAreas": {
              "title": "Textove polia",
              "type": "object",
              "required": [
                "pros"
              ],
              "properties": {
                "pros": {
                  "title": "Pros",
                  "type": "string"
                },
                "cons": {
                  "title": "Cons",
                  "type": "string",
                  "default": "Defaultna hodnota"
                }
              }
            }
          }
        }
      }
    },
    {
      "properties": {
        "selectFields": {
          "title": "Ukazka Selectov",
          "type": "object",
          "required": [
            "school"
          ],
          "properties": {
            "school": {
              "type": "string",
              "title": "University",
              "oneOf": [
                {"const": "STU FEI", "title": "fakulta elektrotechniky a informatiky"},
                {"const": "STU FCHPT"},
                {"const": "STU FIIT", "title": "fakulta informatiky a informacnych technologii"}
              ]
            },
            "diplomas": {
              "type": "array",
              "title": "Reached diplomas",
              "uniqueItems": true,
              "items": {
                "type": "string",
                "oneOf": [
                  {"const": "STU FEI", "title": "fakulta elektrotechniky a informatiky"},
                  {"const": "STU FCHPT"},
                  {"const": "STU FIIT", "title": "fakulta informatiky a informacnych technologii"}
                ]
              }
            },
            "years": {
              "type": "number",
              "title": "Years in school",
              "uniqueItems": true,
              "enum": [
                1,
                2,
                3,
                4,
                5,
                6
              ]
            }
          }
        }
      }
    },
    {
      "properties": {
        "fileUploads": {
          "title": "Nahratie suborov",
          "type": "object",
          "required": ["importButtonMultipleFiles"],
          "properties": {
            "importButtonOneFile": {
              "title": "Importuj jeden subor",
              "type": "string"
            },
            "importButtonMultipleFiles": {
              "title": "Importuj viac suborov",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "importDragAndDropOneFile": {
              "title": "Presun sem jeden subor",
              "type": "string"
            },
            "importDragAndDropMultipleFiles": {
              "title": "Presun sem viac suborov",
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    {
      "properties": {
        "chooseOneOf": {
          "title": "Radio button step",
          "type": "object",
          "required": ["againSchool"],
          "properties": {
            "chooseOne": {
              "type": "string",
              "default": "multiply",
              "title": "Some random choose",
              "oneOf": [
                {
                  "const": "screen",
                  "title": "Screen",
                  "disabled": true,
                  "tooltip": "This is some tooltip1"
                },
                {
                  "const": "multiply",
                  "title": "Multiply",
                  "error": true
                },
                {
                  "const": "overlay",
                  "title": "Overlay"
                },
                {
                  "const": "notOverlay",
                  "title": "Not Overlay"
                }
              ]
            },
            "againSchool": {
              "type": "string",
              "title": "University",
              "oneOf": [
                {
                  "const": "STU FEI",
                  "title": "fakulta elektrotechniky a informatiky"
                },
                {
                  "const": "STU FCHPT"
                },
                {
                  "const": "STU FIIT",
                  "title": "fakulta informatiky a informacnych technologii"
                }
              ]
            }
          }
        }
      }
    },
    {
      "properties": {
        "checkBoxes": {
          "title": "Checkboxes",
          "type": "object",
          "required": ["favouriteFruits"],
          "properties": {
            "favouriteFruits": {
              "type": "array",
              "title": "Fruits",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "anyOf": [
                  {
                    "title": "Orange",
                    "const": "orange"
                  },
                  {
                    "title": "Banana",
                    "const": "banana"
                  },
                  {
                    "title": "Grape",
                    "const": "grape"
                  },
                  {
                    "title": "Kiwi",
                    "const": "kiwi"
                  },
                  {
                    "title": "Apple",
                    "const": "apple"
                  },
                  {
                    "title": "Plum",
                    "const": "plum"
                  }
                ]
              }
            }
          },
          "if": {
            "properties": {
              "favouriteFruits": {
                "const": ["plum"]
              }
            }
          },
          "then": {
            "properties": {
              "checkboxBonus": {
                "title": "This will show when we will click plum",
                "type": "object",
                "required": ["firstBonus"],
                "properties": {
                  "firstBonus": {
                    "type": "string",
                    "title": "First bonus"
                  },
                  "secondBonus": {
                    "type": "string",
                    "title": "Second bonus"
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "checkBoxes": {
            "properties": {
              "favouriteFruits": {
                "const": ["plum"]
              }
            }
          },
          "selectFields": {
            "properties": {
              "years": {
                "const": 6
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "conditionalStep": {
            "title": "This is conditional step",
            "type": "object",
            "properties": {
              "customText": {
                "type": "string",
                "title": "Write custom text"
              }
            }
          }
        }
      }
    }
  ]
}

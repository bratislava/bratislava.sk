{
  "$async": true,
  "title": "Example",
  "description": "Example schema",
  "type": "object",
  "allOf": [
    {
      "properties": {
        "inputFields": {
          "title": "Showcase of InputField",
          "required": ["firstName", "lastName"],
          "type": "object",
          "properties": {
            "firstName": {
              "type": "string",
              "title": "First Name",
              "default": "Anton"
            },
            "lastName": {
              "type": "string",
              "title": "Last Name"
            },
            "phone": {
              "type": "string",
              "title": "Phone number"
            },
            "password": {
              "type": "string",
              "title": "Password"
            },
            "psc": {
              "type": "string",
              "title": "PSC",
              "format": "zip"
            }
          }
        },
        "textAreas": {
          "title": "Textove polia",
          "required": ["pros"],
          "type": "object",
          "properties": {
            "pros": {
              "title": "Pros",
              "type": "string"
            },
            "cons": {
              "title": "Cons",
              "type": "string",
              "default": "Defaultna hodnota"
            }
          }
        }
      }
    },
    {
      "properties": {
        "selectFields": {
          "title": "Ukazka Selectov",
          "required": ["school"],
          "type": "object",
          "properties": {
            "school": {
              "type": "string",
              "title": "University",
              "oneOf": [
                { "const": "STU FEI", "title": "fakulta elektrotechniky a informatiky" },
                { "const": "STU FCHPT" },
                { "const": "STU FIIT", "title": "fakulta informatiky a informacnych technologii" }
              ]
            },
            "diplomas": {
              "type": "array",
              "title": "Reached diplomas",
              "uniqueItems": true,
              "items": {
                "type": "string",
                "enum": ["ing.", "mgr.", "bc.", "phd.", "doc.", "prof."],
                "enumNames": ["Inzinier", "Magister", "Bakalar", null, "Docent", "Profesor"]
              }
            },
            "years": {
              "type": "number",
              "title": "Years in school",
              "uniqueItems": true,
              "enum": [1, 2, 3, 4, 5, 6]
            }
          }
        }
      }
    },
    {
      "properties": {
        "fileUploads": {
          "title": "Nahratie suborov",
          "required": [],
          "type": "object",
          "properties": {
            "importButtonOneFile": {
              "type": "string"
            },
            "importButtonMultipleFiles": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "importDragAndDropOneFile": {
              "type": "string"
            },
            "importDragAndDropMultipleFiles": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    {
      "properties": {
        "chooseOneOf": {
          "title": "Choose one of radio buttons",
          "type": "object",
          "properties": {
            "chooseOne": {
              "type": "string",
              "default": "multiply",
              "title": "Some random choose",
              "oneOf": [
                {
                  "const": "screen",
                  "title": "Screen",
                  "disabled": true,
                  "tooltip": "This is some tooltip1"
                },
                {
                  "const": "multiply",
                  "title": "Multiply",
                  "error": true
                },
                {
                  "const": "overlay",
                  "title": "Overlay"
                }
              ]
            }
          }
        }
      }
    },
    {
      "properties": {
        "user": {
          "type": "object",
          "properties": {
            "phone": {
              "type": "string",
              "isPhone": {}
            }
          }
        }
      }
    },
    {
      "properties": {
        "verification": {
          "type": "object",
          "properties": {
            "token": {
              "type": "string",
              "isToken": { "ref": "user.phone" }
            }
          }
        }
      }
    },
    {
      "required": [],
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        }
      }
    }
  ]
}

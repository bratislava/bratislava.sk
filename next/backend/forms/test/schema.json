{
  "title": "Example",
  "description": "Example schema",
  "type": "object",
  "allOf": [
    {
      "properties": {
        "inputFields": {
          "title": "Showcase of InputField",
          "required": [
            "firstName",
            "lastName"
          ],
          "properties": {
            "firstName": {
              "type": "string",
              "title": "First Name",
              "default": "Anton"
            },
            "lastName": {
              "type": "string",
              "title": "Last Name"
            },
            "phone": {
              "type": "string",
              "title": "Phone number"
            },
            "password": {
              "type": "string",
              "title": "Password"
            },
            "psc": {
              "type": "string",
              "title": "PSC",
              "format": "zip"
            }
          }
        },
        "textAreas": {
          "title": "Textove polia",
          "required": [
            "pros"
          ],
          "properties": {
            "pros": {
              "title": "Pros",
              "type": "string"
            },
            "cons": {
              "title": "Cons",
              "type": "string",
              "default": "Defaultna hodnota"
            }
          }
        }
      }
    },
    {
      "properties": {
        "selectFields": {
          "title": "Ukazka Selectov",
          "required": [
            "school"
          ],
          "properties": {
            "school": {
              "type": "string",
              "title": "University",
              "oneOf": [
                {"const": "STU FEI", "title": "fakulta elektrotechniky a informatiky"},
                {"const": "STU FCHPT"},
                {"const": "STU FIIT", "title": "fakulta informatiky a informacnych technologii"}
              ]
            },
            "diplomas": {
              "type": "array",
              "title": "Reached diplomas",
              "uniqueItems": true,
              "items": {
                "type": "string",
                "oneOf": [
                  {"const": "STU FEI", "title": "fakulta elektrotechniky a informatiky"},
                  {"const": "STU FCHPT"},
                  {"const": "STU FIIT", "title": "fakulta informatiky a informacnych technologii"}
                ]
              }
            },
            "years": {
              "type": "number",
              "title": "Years in school",
              "uniqueItems": true,
              "enum": [
                1,
                2,
                3,
                4,
                5,
                6
              ]
            }
          }
        }
      }
    },
    {
      "properties": {
        "fileUploads": {
          "title": "Nahratie suborov",
          "required": ["importButtonMultipleFiles"],
          "properties": {
            "importButtonOneFile": {
              "title": "Importuj jeden subor",
              "type": "string"
            },
            "importButtonMultipleFiles": {
              "title": "Importuj viac suborov",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "importDragAndDropOneFile": {
              "title": "Presun sem jeden subor",
              "type": "string"
            },
            "importDragAndDropMultipleFiles": {
              "title": "Presun sem viac suborov",
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    {
      "properties": {
        "chooseOneOf": {
          "title": "Choose one of radio buttons",
          "type": "object",
          "required": ["chooseOne"],
          "properties": {
            "chooseOne": {
              "type": "string",
              "title": "Some random choose",
              "oneOf": [
                {
                  "const": "screen",
                  "title": "Screen"
                },
                {
                  "const": "multiply",
                  "title": "Multiply"
                },
                {
                  "const": "overlay",
                  "title": "Overlay"
                }
              ]
            }
          }
        }
      }
    },
    {
      "properties": {
        "checkBoxes": {
          "title": "Checkboxes",
          "required": ["favouriteFruits"],
          "properties": {
            "favouriteFruits": {
              "type": "array",
              "title": "Fruits",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "anyOf": [
                  {
                    "title": "Orange",
                    "const": "orange"
                  },
                  {
                    "title": "Banana",
                    "const": "banana"
                  },
                  {
                    "title": "Grape",
                    "const": "grape"
                  },
                  {
                    "title": "Kiwi",
                    "const": "kiwi"
                  },
                  {
                    "title": "Apple",
                    "const": "apple"
                  },
                  {
                    "title": "Plum",
                    "const": "plum"
                  }
                ]
              }
            }
          }
        }
      }
    }
  ]
}

            "school": {
              "type": "string",
              "title": "University",
              "oneOf": [
                {
                  "const": "STU FEI",
                  "title": "fakulta elektrotechniky a informatiky"
                },
                {
                  "const": "STU FCHPT"
                },
                {
                  "const": "STU FIIT",
                  "title": "fakulta informatiky a informacnych technologii"
                }
              ]
            },
            "diplomas": {
              "type": "array",
              "title": "Reached diplomas",
              "uniqueItems": true,
              "items": {
                "type": "string",
                "oneOf": [
                  {
                    "const": "STU FEI",
                    "title": "fakulta elektrotechniky a informatiky"
                  },
                  {
                    "const": "STU FCHPT"
                  },
                  {
                    "const": "STU FIIT",
                    "title": "fakulta informatiky a informacnych technologii"
                  }
                ]
              }
            },
            "years": {
              "type": "number",
              "title": "Years in school",
              "uniqueItems": true,
              "enum": [
                1,
                2,
                3,
                4,
                5,
                6
              ]
            }
          }
        }
      }
    },
    {
      "properties": {
        "fileUploads": {
          "title": "Nahratie suborov",
          "type": "object",
          "required": ["importButtonMultipleFiles"],
          "properties": {
            "importButtonOneFile": {
              "title": "Importuj jeden subor",
              "type": "string"
            },
            "importButtonMultipleFiles": {
              "title": "Importuj viac suborov",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "importDragAndDropOneFile": {
              "title": "Presun sem jeden subor",
              "type": "string"
            },
            "importDragAndDropMultipleFiles": {
              "title": "Presun sem viac suborov",
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    {
      "properties": {
        "chooseOneOf": {
          "title": "Radio button step",
          "type": "object",
          "required": [
            "chooseOneOfMore"
          ],
          "properties": {
            "chooseOneOfMore": {
              "type": "string",
              "title": "Some random choose",
              "oneOf": [
                {
                  "const": "screen",
                  "title": "Screen"
                },
                {
                  "const": "multiply",
                  "title": "Multiply"
                },
                {
                  "const": "overlay",
                  "title": "Overlay"
                }
              ]
            },
            "chooseOneOfTwo": {
              "type": "string",
              "title": "Some random choose",
              "oneOf": [
                {
                  "const": "Ano",
                  "title": "Ano"
                },
                {
                  "const": "Nie",
                  "title": "Nie"
                }
              ]
            }
          },
          "if": {
            "properties": {
              "chooseOneOfMore": {
                "const": "overlay"
              }
            }
          },
          "then": {
            "required": ["overlayInput"],
            "properties": {
              "overlayInput": {
                "type": "string",
                "title": "WRITE OVERLAY INPUT (conditional field)"
              }
            }
          },
          "else": {
            "properties": {
              "notOverlayInput": {
                "type": "string",
                "title": "some other input"
              }
            }
          }
        }
      }
    },
    {
      "$async": true,
      "properties": {
        "user": {
          "type": "object",
          "title": "Example async validation",
          "properties": {
            "phone": {
              "type": "string",
              "isExampleAsyncValidation": {
                "errorMsg": "Required input"
              }
            }
          }
        }
      }
    },
    {
      "properties": {
        "checkBoxes": {
          "title": "Checkboxes",
          "type": "object",
          "required": ["favouriteFruits"],
          "properties": {
            "favouriteFruits": {
              "type": "array",
              "title": "Fruits max 3 items",
              "minItems": 1,
              "maxItems": 3,
              "uniqueItems": true,
              "items": {
                "anyOf": [
                  {
                    "title": "Orange",
                    "const": "orange"
                  },
                  {
                    "title": "Banana",
                    "const": "banana"
                  },
                  {
                    "title": "Grape",
                    "const": "grape"
                  },
                  {
                    "title": "Kiwi",
                    "const": "kiwi"
                  },
                  {
                    "title": "Apple",
                    "const": "apple"
                  },
                  {
                    "title": "Plum",
                    "const": "plum"
                  }
                ]
              }
            }
          },
          "if": {
            "properties": {
              "favouriteFruits": {
                "const": ["plum"]
              }
            }
          },
          "then": {
            "properties": {
              "checkboxBonus": {
                "title": "This will show when we will click plum",
                "type": "object",
                "required": ["firstBonus"],
                "properties": {
                  "firstBonus": {
                    "type": "string",
                    "title": "First bonus (conditional field)"
                  },
                  "secondBonus": {
                    "type": "string",
                    "title": "Second bonus (conditional field)"
                  }
                }
              }
            }
          }
        }
      }
    }
  ]
